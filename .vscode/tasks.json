{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fcolor-diagnostics",
				"-Wall",
				"-fansi-escape-codes",
				"-g",
				"-I${workspaceFolder}/includes",
				"-I${workspaceFolder}/includes/glm",
				"-I${workspaceFolder}/includes/assimp",
				"-L${workspaceFolder}/libs",
				"${workspaceFolder}/libs/libassimp.5.4.1.dylib",
				"${workspaceFolder}/libglfw3.a",
				"${workspaceFolder}/src/**.cpp",
				"${workspaceFolder}/src/WindowSystem/**.cpp",
				"${workspaceFolder}/src/EventSystem/**.cpp",
				"${workspaceFolder}/src/CameraSystem/**.cpp",
				"${workspaceFolder}/src/Utility/Clock/**.cpp",
				"${workspaceFolder}/src/Utility/**.cpp",
				"${workspaceFolder}/src/opengl_backend/buffers/VertexArrayBuffer.cpp",
				"${workspaceFolder}/src/opengl_backend/buffers/Vertexbuffer.cpp",
				"${workspaceFolder}/src/opengl_backend/Textures/TextureSystem.cpp",
				"${workspaceFolder}/glad.c",
				"-o",
				"${workspaceFolder}/app",
				"-framework",
				"OpenGL",
				"-framework",
				"Cocoa",
				"-framework",
				"IOKit",
				"-framework",
				"CoreVideo",
				"-framework",
				"CoreFoundation",
				"-Wno-deprecated",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}